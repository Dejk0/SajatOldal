@model SajatOldal.Models.Motorok.Motorok

@{
    ViewData["Title"] = "Edit";
}

<h1>Módosítás</h1>

<h4>@Html.DisplayFor(modelItem => modelItem.CarName)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Pn_max" class="control-label"></label>
                <input asp-for="Pn_max" class="form-control" />
                <span asp-validation-for="Pn_max" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="n_pn_max" class="control-label"></label>
                <input asp-for="n_pn_max" class="form-control" />
                <span asp-validation-for="n_pn_max" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="M_max" class="control-label"></label>
                <input asp-for="M_max" class="form-control" />
                <span asp-validation-for="M_max" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="n_M_max" class="control-label"></label>
                <input asp-for="n_M_max" class="form-control" />
                <span asp-validation-for="n_M_max" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Max_Weight" class="control-label"></label>
                <input asp-for="Max_Weight" class="form-control" />
                <span asp-validation-for="Max_Weight" class="text-danger"></span>
            </div>
            @for (int i = 0; i < Model.Transmissions.Count; i++)
            {
                    <div class="form-group">
                        <label asp-for="Transmissions" class="control-label">@($"{i + 1}. fokozat (-)")</label>
                        <input asp-for="Transmissions[@i]" class="form-control" />
                        <span asp-validation-for="Transmissions[@i]" class="text-danger"></span>
                    </div>
            }            
            <div class="form-group">
                <label asp-for="Gear_ratio" class="control-label"></label>
                <input asp-for="Gear_ratio" class="form-control" />
                <span asp-validation-for="Gear_ratio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Length" class="control-label"></label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Width" class="control-label"></label>
                <input asp-for="Width" class="form-control" />
                <span asp-validation-for="Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hight" class="control-label"></label>
                <input asp-for="Hight" class="form-control" />
                <span asp-validation-for="Hight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wheelbase" class="control-label"></label>
                <input asp-for="Wheelbase" class="form-control" />
                <span asp-validation-for="Wheelbase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gauge" class="control-label"></label>
                <input asp-for="Gauge" class="form-control" />
                <span asp-validation-for="Gauge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tire" class="control-label"></label>
                <input asp-for="Tire" class="form-control" />
                <span asp-validation-for="Tire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drag_coefficient" class="control-label"></label>
                <input asp-for="Drag_coefficient" class="form-control" />
                <span asp-validation-for="Drag_coefficient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rolling_Resistance_Factor" class="control-label"></label>
                <input asp-for="Rolling_Resistance_Factor" class="form-control" />
                <span asp-validation-for="Rolling_Resistance_Factor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transmission_efficiency" class="control-label"></label>
                <input asp-for="Transmission_efficiency" class="form-control" />
                <span asp-validation-for="Transmission_efficiency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reduction_constant_of_rotating_masses" class="control-label"></label>
                <input asp-for="Reduction_constant_of_rotating_masses" class="form-control" />
                <span asp-validation-for="Reduction_constant_of_rotating_masses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slope_of_rise" class="control-label"></label>
                <input asp-for="Slope_of_rise" class="form-control" />
                <span asp-validation-for="Slope_of_rise" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adhesion_factor" class="control-label"></label>
                <input asp-for="Adhesion_factor" class="form-control" />
                <span asp-validation-for="Adhesion_factor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Creep_factor" class="control-label"></label>
                <input asp-for="Creep_factor" class="form-control" />
                <span asp-validation-for="Creep_factor" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="AirDensity" class="control-label"></label>
                <input asp-for="AirDensity" class="form-control" />
                <span asp-validation-for="AirDensity" class="text-danger"></span>
                </div>
            <div class="form-group">
                <input type="submit" value="Mentés" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vissza a listára</a>
</div>


